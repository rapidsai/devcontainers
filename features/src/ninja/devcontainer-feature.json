{
  "name": "Ninja build",
  "id": "ninja",
  "version": "25.4.0",
  "description": "A feature to install ninja-build",
  "options": {
    "version": {
      "type": "string",
      "proposals": [
        "latest",
        "1.12.1",
        "1.12.0"
      ],
      "default": "latest",
      "description": "ninja-build version to install."
    }
  },
  "mounts": [
    {
      "type": "cache",
      "target": "/var/tmp"
    },
    {
      "type": "cache",
      "target": "/var/cache/apt"
    },
    {
      "type": "cache",
      "target": "/var/lib/apt"
    }
  ]
}
