{
  "name": "OpenMPI",
  "id": "openmpi",
  "version": "25.4.0",
  "description": "A feature to install OpenMPI with optional CUDA and UCX support",
  "options": {
    "version": {
      "type": "string",
      "proposals": [
        "latest",
        "system",
        "5.0.3",
        "4.1.2",
        "4.0.3"
      ],
      "default": "system",
      "description": "OpenMPI version to install (defaults to system)."
    }
  },
  "mounts": [
    {
      "type": "cache",
      "target": "/var/tmp"
    },
    {
      "type": "cache",
      "target": "/var/cache/apt"
    },
    {
      "type": "cache",
      "target": "/var/lib/apt"
}
